<%= render 'list', book: @book, user: User.find(current_user.id) %>

<h1>Users</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p>image</p>
      <p>name</p>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @users.each do |user| %>
        <div class="row mb-3">
          <div class="col-md-3">
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </div>
          <div class="col-md-9">
            <p><%= user.name %></p>
            <%= link_to 'Show', user_path(user.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>