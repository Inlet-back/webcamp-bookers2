<div class="container">
  <div class="row">
<%= render 'list', book: @newbook, user: @book.user%>
  <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

  <div class="row mb-3">

  <div class="col-md-3">
    <p>
   <%= link_to user_path(@book.user.id) do %>
   <%= image_tag @book.user.get_profile_image(100,100) %>
    <% end %>
  </p>
    <%= link_to book_path(@book.id) do %>
      <%= @book.title %>
    <% end %>
    </div>
  <div class="col-md-3">
    <%= @book.body %>
  </div>

<div class="col-md-3">
  <%= link_to user_path(@book.user.id) do %>
    <%= @book.user.name %>
   <% end %>
    </div>
  <div class="col-md-3">
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
      </div>
       </div>
  <% end %>
   <% if @book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorite_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorite_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>

  </div>
  <div>
  <p>コメント件数：<%= @book.book_comments.count %></p>
  <% @book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
     <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@book, @book_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>
